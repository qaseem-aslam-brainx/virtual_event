document.getElementById("toggle_text_<%= @sponsor.id %>").innerText = "<%= status_link_text(@sponsor) %>"
document.getElementById("toggle_status_text_<%= @sponsor.id %>").innerText = "<%= @sponsor.status.capitalize %>"

document.getElementById("toggle_status_text_<%= @sponsor.id %>").classList.remove("<%= @sponsor.active? ? "deactive" : "active" %>")
document.getElementById("toggle_status_text_<%= @sponsor.id %>").classList.add("<%= @sponsor.active? ? "active" : "deactive" %>")
