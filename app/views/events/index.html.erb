<%= link_to 'New Event', new_event_path %>
<h1>All Events</h1>
<table border="1">
  <tr>
    <th>Logo</th>
    <th>Title</th>
    <th>Date</th>
    <th>Time Start</th>
    <th>Time End</th>
  </tr>
  <% @events.each do |event| %>
    <tr>
      <td><%= event.logo %></td>
      <td><%= event.title %></td>
      <td><%= event.date %></td>
      <td><%= event.time_start %></td>
      <td><%= event.time_end %></td>

      <td><%= link_to 'Show', event_path(event) %></td>
      <td><%= link_to 'Edit', edit_event_path(event) %></td>
      <td><%= link_to 'Destroy', event_path(event),
                      method: :delete,
                      data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
